# Environment variables for NST-SDC-Portal

# Server Configuration
PORT=3000
NODE_ENV=development

# Database - PostgreSQL
# For local development, you can use:
# DATABASE_URL="postgresql://username:password@localhost:5432/nstsdc_portal?schema=public"
# For Prisma Postgres (cloud):
DATABASE_URL="prisma+postgres://localhost:51213/?api_key=YOUR_API_KEY"

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# GitHub Personal Access Token (for fetching repository data)
GITHUB_TOKEN=your_github_personal_access_token

# Session Secret
SESSION_SECRET=your_session_secret_key
